<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginScreenInput">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/value_32dp</item>
        <item name="android:padding">@dimen/value_8dp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
    </style>

    <style name="LoginScreenButton">
        <item name="android:backgroundTint">@color/yp_red</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoginScreenText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainScreenButton">
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">24sp</item>
        <item name="cornerRadius">@dimen/value_32dp</item>
    </style>

</resources>